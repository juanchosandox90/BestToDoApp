<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestToDoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkerPurple</item>
        <item name="android:background">#1F1F30</item>
        <item name="colorPrimaryVariant">@color/darkerPurple</item>
        <item name="colorOnPrimary">@color/darkerPurple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkerBlue</item>
        <item name="colorSecondaryVariant">@color/darkerBlue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1F1F30</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BestToDo.Multiline" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:textColor">@color/darkerPurple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:radius">6dp</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color_night</item>
        <item name="android:textColorHint">@color/text_color_hint_night</item>
        <item name="hintTextColor">@color/lightGrey</item>
    </style>


    <style name="CustomConstraintItem" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@drawable/item_background_night</item>
    </style>
</resources>