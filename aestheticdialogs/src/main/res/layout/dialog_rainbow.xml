<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout_rainbow"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/dialog_error">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_icon_rainbow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_check_circle_green_24dp"
        android:layout_margin="20dp"
        android:tint="@color/md_white_1000"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/dialog_icon_rainbow"
        android:layout_toRightOf="@id/dialog_icon_rainbow"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_text_rainbow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_title_rainbow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="Success"
                android:textColor="@color/md_white_1000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_message_rainbow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Anyone with access can view your invited visitors"
                android:textColor="@color/md_white_1000" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_close_rainbow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:tint="@color/md_white_1000"
            app:srcCompat="@drawable/ic_close_gray_24dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>